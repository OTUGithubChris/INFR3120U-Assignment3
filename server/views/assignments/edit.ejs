<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Assignment's Name"
                    name="Name" 
                    value="<%= Assignment.Name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="classTextField">Class</label>
                    <input type="text" class="form-control"
                    id="classTextField"
                    placeholder="Enter the Class's Name"
                    name="Class" 
                    value="<%= Assignment.Class %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dueTextField">Due</label>
                    <input type="text" class="form-control"
                    id="dueTextField"
                    placeholder="Enter the Due Date"
                    name="Due" 
                    value="<%= Assignment.Due %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="worthTextArea">Worth</label>
                    <textarea type="text" class="form-control"
                    id="worthTextArea"
                    placeholder="Enter the Assignment's Worth"
                    name="Worth" 
                    required>
                    <%= Assignment.Worth %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="gradeTextField">Grade</label>
                    <input type="text" class="form-control"
                    id="gradeTextField"
                    placeholder="Enter the Assignment's Recieved Grade"
                    name="Grade" 
                    value="<%= Assignment.Grade %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/assignments" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>